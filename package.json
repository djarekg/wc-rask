{
  "name": "@wc-rask/workspace",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Dustin Griffith"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/djarekg/wc-rask"
  },
  "license": "MIT",
  "type": "module",
  "packageManager": "bun@1.1.41",
  "engines": {
    "bun": ">=1.1.41"
  },
  "scripts": {
    "prefresh": "bun run --cwd packages/core --cwd packages/web --cwd apps/demo rm -rf dist",
    "fresh": "rm -rf node_modules package-lock.json bun.lockb && echo 'installing' && bun i --silent",
    "//build": "bun run --filter '*' build",
    "build": "bun run scripts/build.ts",
    "format": "bun run --filter '*' biome format --write .",
    "lint": "bun run --filter '*' biome check --write --changed --staged",
    "typecheck": "tsc --noEmit",
    "ci": "biome ci",
    "docs": "typedoc",
    "docs-all": "bun run docs --filter --if-present"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@jspm/core": "^2.1.0",
    "@jspm/generator": "^2.4.1",
    "@jspm/import-map": "^1.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/bun": "^1.1.14",
    "bun-plugin-dts": "^0.3.0",
    "jest": "^29.7.0",
    "picocolors": "^1.1.1",
    "typedoc": "^0.27.5"
  },
  "peerDependencies": {
    "typescript": "^5",
    "lit": "^3",
    "signal-polyfill": "^0.2.0",
    "signal-utils": "^0.21.0"
  },
  "overrides": {
    "bun-plugin-dts": "~0.3.0",
    "bun-plugin-html": "^2.2.0"
  },
  "workspaces": ["apps/*", "packages/*"]
}
