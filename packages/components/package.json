{
  "name": "@wc-rask/components",
  "version": "1.0.0",
  "private": false,
  "author": {
    "name": "Dustin Griffith",
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/djarekg/wc-rask",
  },
  "license": "MIT",
  "packageManager": "bun@1.1.41",
  "engines": {
    "bun": ">=1.1.41",
  },
  "type": "module",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    "./*": {
      "@wc-rask/components": "./src/**/*.ts",
      "browser": "./dist/**/*.js",
      "default": "./src/**/*.ts",
      "types": "./dist/**/*.d.ts",
    },
    "./button": {
      "browser": "./dist/button/index.js",
      "default": "./src/button/button.ts",
    },
    "./notification": {
      "browser": "./dist/notification/index.js",
      "default": "./src/notification/notification.ts",
    },
    "./text-field": {
      "browser": "./dist/text-field/index.js",
      "default": "./src/text-field/text-field.ts",
    },
    "./package.json": "./package.json",
  },
  "files": ["dist/**/*.{js,js.map,ts,d.ts,css,css.map}", "README.md", "!dist/*.tsbuildinfo"],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "jspm build src/**/*.ts --output dist",
    "//build": "bun build --entrypoints src/button/button.ts src/notification/notification.ts --packages external --sourcemap=linked --experimentalCss --outdir dist --splitting --packages external --target browser --root src",
    "postbuild": "bun run build:declaration",
    "build:declaration": "tsc --project tsconfig.types.json",
  },
  "peerDependencies": {
    "typescript": "^5",
  },
  "dependencies": {
    "@lit-labs/signals": "^0.1.1",
    "@material/web": "^2.2.0",
    "@wc-rask/web": "workspace:*",
    "lit": "^3.2.1",
    "signal-polyfill": "^0.2.1",
    "signal-utils": "^0.21.0",
  },
}
